@using ParadigmWatch.Models.ViewModels
@model LoginModel
@{
    ViewData["Title"] = "Index";
}

@* ______________________________________            NEW SECTION           _________________________________________________ *@

<section id="identityContainer">

    <div class="identityForm">

        <div class="identityRegister">
            <iframe src='@Url.Action("Index", "Signup")' width="100"   height="1000" frameborder="0"></iframe>
        </div>

        <div class="identityLogin">
            <div class="loginContent">
                <div class="container">

                    <div class="bg-primary why p-1 text-white  identityCenter"><h4>Log In</h4></div>

                    <div asp-validation-summary=" All" class="text-danger"></div>
                    <form method="post" asp-action="Index">
                        <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl" />
                        <div class="form-group">
                            <label asp-for="Email">Name</label><br />
                            <input asp-for="Email" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Password">Password</label><br />
                            <input asp-for="Password" class="form-control" />
                        </div>
                        <button class="btn btn-primary identityLoginBtn" type="submit">Submit</button>
                        <a href="#">forget passwords?</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

