                   <li class="navigationItem"><a href="#">Home</a></li>
                   <li class="navigationItem"><a href="#">Store</a></li>
                   <li class="navigationItem"><a href="#">About</a></li>
                   <li class="navigationItem"><a href="#">Contact</a></li>
               </ul>
               <ul class="login">
                   <li class="loginItem"><a href="#">&#9898; Cart</a></li>
                   <li class="loginItem"><a href="#">&#9898; Favorites</a></li>
                   <li class="loginItem"><a href="#">Login / Register</a></li>
               </ul>
           </div>

        </nav>


        @RenderBody()


        <footer>
            <div id="share">
                <h3 class="subTitle">Share:</h3>
